//Creat by: Dr.Hamid Rahimi//
var MixLAI = ((B08/(B04+B11))+(B08/(B04+B12)))/2.0; // calculate the index
if (MixLAI < 0.5) {
return [0.3, 0.2, 0.7] 
}
if (MixLAI < 0.7) {
return [0.2, 0.6, 0.3] 
}
if (MixLAI < 1.5) {
return [0.5, 0.8, 0.2] 
}
else {
return [1, 0.4, 0] 
}
